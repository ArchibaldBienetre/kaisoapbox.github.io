---
import Layout from "../layouts/BlogPost.astro";
import * as aboutMe from "./about.md";
---

<Layout
  title={aboutMe.frontmatter.title}
  description={aboutMe.frontmatter.description}
  pubDate={new Date(aboutMe.frontmatter.pubDate)}
  heroImage={aboutMe.frontmatter.heroImage}
  imageWidth={aboutMe.frontmatter.imageWidth}
  imageHeight={aboutMe.frontmatter.imageHeight}
>
  <aboutMe.Content />
</Layout>
